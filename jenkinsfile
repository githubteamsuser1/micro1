pipeline {
    agent any

    stages {
        stage('Download Code') {
            steps {
                echo 'Inside Micro 1'
                echo 'Pulling... ' + env.GIT_BRANCH
                env.GIT_REPO_NAME = env.GIT_URL.replaceFirst(/^.*\/([^\/]+?).git$/, '$1')
                echo 'Pulling... ' + env.GIT_REPO_NAME
            }
        }
    }
}
